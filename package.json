{
  "name": "pnw-alliance-manager",
  "version": "1.0.0",
  "description": "Politics and War Alliance Manager - Vercel + Supabase",
  "scripts": {
    "dev": "vercel dev",
    "build": "npx prisma generate && cd frontend && npm install && npm run build",
    "start": "vercel dev",
    "deploy": "vercel --prod",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:seed": "npx tsx prisma/seed.ts",
    "postinstall": "npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.4.2",
    "@supabase/supabase-js": "^2.38.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.10.2",
    "uuid": "^9.0.1",
    "next": "^14.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.6.3",
    "@types/bcryptjs": "^2.4.4",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/uuid": "^9.0.4",
    "prisma": "^5.4.2",
    "typescript": "^5.2.2",
    "vercel": "^32.4.1",
    "tsx": "^3.12.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}